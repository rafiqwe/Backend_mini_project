<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
    <title>Profile page</title>
  </head>
  <body>
    <div class="bg-zinc-800 w-full min-h-screen text-white">
      <div class="form p-4 mx-auto w-full rounded">
        <a class="bg-red-500 rounded-md px-4 py-2 font-bold" href="/logout"
          >Logout</a
        >
        <div class="flex items-center justify-center gap-4">
          <div class="w-20 h-20 rounded overflow-hidden">
            <a href="/profile/upload">
              <img
                class="w-full h-full rounded-full"
                src="/image/uploads/<%= user.profile %> "
                alt="<%= user.name %>"
              />
            </a>
          </div>
          <h1 class="text-3xl text-center font-bold">Hello <%= user.name %></h1>
        </div>
        <form action="/post" method="post">
          <div class="w-full flex flex-col items-center justify-center gap-4">
            <textarea
              name="post"
              id=""
              class="block mt-5 border border-gray-300 outline-none block rounded p-2 mb-4 w-full max-w-md resize-none"
              placeholder="What's on your mind!"
            ></textarea>
            <input
              type="submit"
              id=""
              value="Create new post"
              class="bg-blue-600 hover:bg-blue-500 outline-none block px-8 cursor-pointer rounded p-2 mb-4"
            />
          </div>
        </form>
        <div class="posts mt-20">
          <h1 class="text-zinc-400 text-2xl">Your Post</h1>
          <div class="postcontainer mt-8 gap-4 flex-col flex flex-wrap">
            <% user.post.reverse().forEach((post) => { %>
            <div class="post">
              <div
                class="w-1/2 p-4 rounded-md border-2 border-zinc-800 bg-zinc-700"
              >
                <h2 class="text-blue-500 mb-2">@<%= user.username %></h2>
                <p class="text-sm"><%= post.content %></p>
                <small class="inline-block mt-2"
                  ><%= post.likes.length %></small
                >
                <div class="btns flex gap-4 mt-1">
                  <a
                    class="text-pinc-500 cursor-pointer"
                    href="/like/<%= post._id %>"
                    ><%= post.likes.length ? "UnLike" : "Like" %>
                  </a>
                  <a
                    class="text-blue-500 cursor-pointer"
                    href="/edit/<%= post._id %>"
                    >Edit</a
                  >
                </div>
              </div>
            </div>
            <% }) %>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
